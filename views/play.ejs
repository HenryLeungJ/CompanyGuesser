                <% if(selectedCompany != undefined) { %>
                    <img src="<%=selectedCompany.image %>" height="100" alt="">
            </div>
            <p class="col-lg-8 mx-auto fs-5 text-muted">
            What is this company?
            </p>
            <div class="d-inline-flex gap-2">
            <div class="form-floating mb-4">
                <form action="/play" method="POST">
                    <input type="text" class="form-control" id="floatingInput" placeholder="i.e Microsoft" name="company_guess">
                </form>
                
            </div>
            </div>
            <%} else {%>
                <h1>SLOW YOUR HORSES! YOU'RE TOO HOT!</h1>
            </div>
            <h2>REFRESH THE PAGE!</h2>
                <% } %>
        </div>
    </div>
</div>

