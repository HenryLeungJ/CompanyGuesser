<%- include("partials/header.ejs") %>
<div class="connected">
    <div class="overlap">
        <h1 class="text-white mx-2">
    HIGH SCORE: <%= current_user.highscore %>
    </h1>
    <h2 class="text-secodnary mx-2">
        CURRENT_SCORE: <%= score %>
    </h2>
    </div>
    <div class="overlap d-flex justify-content-end my-2 mx-2">
        <form action="/logout">
            <button class="btn btn-danger py-2" type="submit">Logout</button>
        </form>
    </div>
    
    
    
    <div class="container maxheight center overlap">
        <div class="p-5 text-center center2 bg-body-tertiary rounded-3 w-100">
