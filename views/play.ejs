<%- include("partials/header.ejs") %>
<div class="connected">
    <div class="overlap">
        <h1 class="text-white mx-2">
    HIGH SCORE: <%= current_user.highscore %>
    </h1>
    <h2 class="text-secodnary mx-2">
        CURRENT_SCORE: <%= score %>
    </h2>
    </div>
    <div class="overlap d-flex justify-content-end my-2 mx-2 z-1">
        <a href="/leaderboard" style="text-decoration: none; margin-right: 10px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="gold" class="bi bi-trophy-fill" viewBox="0 0 16 16">
            <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5q0 .807-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33 33 0 0 1 2.5.5m.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935m10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935"/>
            </svg>
        </a>
        <form action="/logout" class="mt-1">
            <button class="btn btn-danger py-2" type="submit">Logout</button>
        </form>
    </div>
    
    
    
    <div class="container center overlap">
        <div class="p-5 text-center center2 bg-body-tertiary rounded-3 w-100">
            <div class="company_image center mb-5">
                <% if(selectedCompany != undefined) { %>
                    <img src="<%=selectedCompany.image %>" height="100" style="max-width: 70%;" alt="Company image">
            </div>
            <p class="col-lg-8 mx-auto fs-5 text-muted">
            What is this company?
            </p>
            <div class="d-inline-flex gap-2">
            <div class="form-floating mb-4">
                <form action="/play" method="POST">
                    <input type="text" class="form-control" id="floatingInput" placeholder="i.e Microsoft" name="company_guess" autofocus onfocus="this.select()">
                </form>
                
            </div>
            </div>
            <%} else {%>
                <h1>SLOW YOUR HORSES! YOU'RE TOO HOT!</h1>
            </div>
            <h2>REFRESH THE PAGE!</h2>
                <% } %>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>